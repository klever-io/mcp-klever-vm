{
  "name": "@klever/mcp-server",
  "version": "1.2.4",
  "description": "MCP server for Klever blockchain smart contract development",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-server": "bin/cli.mjs",
    "mcp-klever-vm": "bin/cli.mjs"
  },
  "files": [
    "dist/",
    "bin/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/klever-io/mcp-klever-vm.git"
  },
  "mcpName": "io.github.klever-io/mcp-klever-vm",
  "homepage": "https://ai.klever.org",
  "bugs": {
    "url": "https://github.com/klever-io/mcp-klever-vm/issues"
  },
  "scripts": {
    "build": "tsc && cp -r src/templates dist/",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "validate": "pnpm typecheck && pnpm lint && pnpm test",
    "ingest": "tsx src/scripts/ingest-knowledge.ts",
    "mcp": "MODE=mcp node --experimental-vm-modules dist/index.js",
    "dev:mcp": "MODE=mcp STORAGE_TYPE=memory tsx watch src/index.ts",
    "start:public": "MODE=public node dist/index.js",
    "dev:public": "MODE=public STORAGE_TYPE=memory tsx watch src/index.ts",
    "install-sdk": "./scripts/install-sdk.sh",
    "version": "node -e \"const fs=require('fs');const s=JSON.parse(fs.readFileSync('server.json','utf8'));s.version=process.env.npm_package_version;if(s.packages)s.packages.forEach(p=>p.version=process.env.npm_package_version);fs.writeFileSync('server.json',JSON.stringify(s,null,2)+'\\n')\" && git add server.json",
    "validate:mcp": "./scripts/validate-mcp.sh",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "mcp",
    "klever",
    "blockchain",
    "smart-contracts",
    "kvm"
  ],
  "author": "Klever <https://klever.org>",
  "license": "MIT",
  "packageManager": "pnpm@10.29.2",
  "engines": {
    "node": ">=18.14.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.2"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@redis/json": "^5.10.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "redis": "^5.10.0",
    "zod": "^4.3.6"
  }
}
