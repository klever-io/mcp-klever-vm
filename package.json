{
  "name": "mcp-klever-vm",
  "version": "1.0.0",
  "description": "MCP server for Klever blockchain smart contract development",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && cp -r src/templates dist/",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "test": "node --experimental-vm-modules $(pnpm bin)/jest",
    "ingest": "tsx src/scripts/ingest-knowledge.ts",
    "mcp": "MODE=mcp node --experimental-vm-modules dist/index.js",
    "dev:mcp": "MODE=mcp STORAGE_TYPE=memory tsx watch src/index.ts",
    "start:public": "MODE=public node dist/index.js",
    "dev:public": "MODE=public STORAGE_TYPE=memory tsx watch src/index.ts",
    "install-sdk": "./scripts/install-sdk.sh"
  },
  "keywords": [
    "mcp",
    "klever",
    "blockchain",
    "smart-contracts",
    "kvm"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@redis/json": "^5.5.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "redis": "^5.5.6",
    "zod": "^3.25.56"
  }
}
