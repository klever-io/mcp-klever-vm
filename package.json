{
  "name": "mcp-klever-vm",
  "version": "1.1.1",
  "description": "MCP server for Klever blockchain smart contract development",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && cp -r src/templates dist/",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "validate": "pnpm typecheck && pnpm lint && pnpm test",
    "ingest": "tsx src/scripts/ingest-knowledge.ts",
    "mcp": "MODE=mcp node --experimental-vm-modules dist/index.js",
    "dev:mcp": "MODE=mcp STORAGE_TYPE=memory tsx watch src/index.ts",
    "start:public": "MODE=public node dist/index.js",
    "dev:public": "MODE=public STORAGE_TYPE=memory tsx watch src/index.ts",
    "install-sdk": "./scripts/install-sdk.sh",
    "validate:mcp": "./scripts/validate-mcp.sh"
  },
  "keywords": [
    "mcp",
    "klever",
    "blockchain",
    "smart-contracts",
    "kvm"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.29.2",
  "engines": {
    "node": ">=18.14.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@redis/json": "^5.10.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "redis": "^5.10.0",
    "zod": "^4.3.6"
  }
}
